<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/ic_launcher_foreground"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/oversea1"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="77dp"
        android:text="일본"
        app:layout_constraintBottom_toTopOf="@+id/oversea3"
        app:layout_constraintEnd_toStartOf="@+id/oversea2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/oversea2"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginEnd="72dp"
        android:layout_marginTop="77dp"
        android:text="중국"
        app:layout_constraintBottom_toTopOf="@+id/oversea4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/oversea1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/oversea3"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginBottom="82dp"
        android:layout_marginStart="72dp"
        android:text="필리핀"
        app:layout_constraintBottom_toTopOf="@+id/oversea7"
        app:layout_constraintEnd_toStartOf="@+id/oversea4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oversea1" />

    <Button
        android:id="@+id/oversea4"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginBottom="82dp"
        android:layout_marginEnd="72dp"
        android:text="러시아"
        app:layout_constraintBottom_toTopOf="@+id/oversea8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/oversea3"
        app:layout_constraintTop_toBottomOf="@+id/oversea2"/>

    <Button
        android:id="@+id/oversea5"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="72dp"
        android:text="영국"
        app:layout_constraintBaseline_toBaselineOf="@+id/oversea6"
        app:layout_constraintEnd_toStartOf="@+id/oversea8"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/oversea6"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginBottom="82dp"
        android:layout_marginEnd="72dp"
        android:layout_marginTop="90dp"
        android:text="미국"
        app:layout_constraintBottom_toBottomOf="@+id/oversea7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/oversea7"
        app:layout_constraintTop_toTopOf="@+id/oversea3" />

    <Button
        android:id="@+id/oversea7"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginBottom="82dp"
        android:layout_marginStart="72dp"
        android:text="프랑스"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/oversea6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oversea3" />

    <Button
        android:id="@+id/oversea8"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginBottom="82dp"
        android:layout_marginEnd="72dp"
        android:text="이탈리아"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/oversea5"
        app:layout_constraintTop_toBottomOf="@+id/oversea4" />
</android.support.constraint.ConstraintLayout>