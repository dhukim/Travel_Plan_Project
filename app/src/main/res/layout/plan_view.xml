<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <ListView
        android:id="@+id/listView"
        android:layout_width="0dp"
        android:layout_height="469dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/plan_add"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="7dp"
        android:text="@string/plan_add"
        app:layout_constraintBaseline_toBaselineOf="@+id/plan_change"
        app:layout_constraintEnd_toStartOf="@+id/plan_change"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/plan_delete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/plan_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plan_change" />

    <Button
        android:id="@+id/plan_change"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="1dp"
        android:text="@string/plan_change"
        app:layout_constraintBaseline_toBaselineOf="@+id/plan_delete"
        app:layout_constraintEnd_toStartOf="@+id/plan_delete"
        app:layout_constraintStart_toEndOf="@+id/plan_add" />

</android.support.constraint.ConstraintLayout>