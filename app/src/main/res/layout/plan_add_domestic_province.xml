<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back_img"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/domestic1"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginBottom="21dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="77dp"
        android:text="경기도"
        app:layout_constraintBottom_toTopOf="@+id/domestic3"
        app:layout_constraintEnd_toStartOf="@+id/domestic2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/domestic2"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="72dp"
        android:layout_marginTop="77dp"
        android:text="강원도"
        app:layout_constraintBottom_toTopOf="@+id/domestic4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/domestic1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/domestic3"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="72dp"
        android:text="충청도"
        app:layout_constraintBottom_toTopOf="@+id/domestic5"
        app:layout_constraintEnd_toStartOf="@+id/domestic4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/domestic1" />

    <Button
        android:id="@+id/domestic4"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="72dp"
        android:text="전라도"
        app:layout_constraintBottom_toTopOf="@+id/domestic6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/domestic3"
        app:layout_constraintTop_toBottomOf="@+id/domestic2" />

    <Button
        android:id="@+id/domestic5"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginBottom="127dp"
        android:layout_marginStart="72dp"
        android:text="경상도"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/domestic6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/domestic3" />

    <Button
        android:id="@+id/domestic6"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginBottom="127dp"
        android:layout_marginEnd="72dp"
        android:text="섬 지역"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/domestic5"
        app:layout_constraintTop_toBottomOf="@+id/domestic4" />
</android.support.constraint.ConstraintLayout>